@{
    ViewData["Title"] = "Tenant settings";
}

<div class="text-center">
    <h1 class="display-4">Tenant settings</h1>
</div>

<form class="form-group" method="post">
    <div class="form-group">
        <label for="Name" class="col-sm-4 control-label">Application insights instrumentation key</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="InstrumentationKey" value="@ViewBag.InstrumentationKey">
        </div>
    </div>
    <div class="form-group">
        <label for="Name" class="col-sm-4 control-label" style="padding-top: 10px;">OAuth2 setting</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="OAuth2Settings" rows="15">@ViewBag.OAuth2Settings</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" style="padding-top: 10px;">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
